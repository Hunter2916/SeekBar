<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="#D3DCE2" />
            <size
                android:width="236dp"
                android:height="32dp" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="4dp" />
                <solid android:color="#009AFE" />
                <size
                    android:width="236dp"
                    android:height="32dp" />
            </shape>
        </clip>
    </item>
</layer-list>
